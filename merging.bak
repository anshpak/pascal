program merging;
type
        intFile  = file of integer;
var
        fText1, fText2: text;
        f1, f2, f: intFile;
        tmp: integer;

procedure initDatFile(var fText: text; var fInt: intFile);
begin
        while not eof(fText) do
        begin
                read(fText,tmp);
                write(fInt,tmp);
        end;
end;

procedure showDatFileInfo(var f: intFile);
var
        tmp:integer;
begin
        seek(f,0);
        while not eof(f) do
        begin
                read(f,tmp);
                write(tmp,' ');
        end;
        writeln;
        seek(f,0)
end;

procedure writeRestOfList(var f3, f: intFile; vary: integer);
begin
        write(f,vary);
        while not eof(f3) do
        begin
                read(f3,vary);
                write(f,vary);
        end;
end;

procedure mergingLists(var f1, f2, f: intFile);
var
        a, b: integer;
begin
        seek(f1,filesize(f1)-1);
        read(f1,a);
        seek(f2,filesize(f2)-1);
        read(f2,b);
        write(f1,b);
        write(f2,a);
        seek(f1,0);
        seek(f2,0);
        read(f1,a);
        read(f2,b);
        while not eof(f1) and not eof(f2) do
        begin
                if a>b then
                begin
                        write(f,b);
                        read(f2,b);
                end
                else
                begin
                        write(f,a);
                        read(f1,a);
                end;
        end;
        if eof(f1) then
                writeRestOfList(f2,f,b)
        else
                writeRestOfList(f1,f,a);
        seek(f,filesize(f)-1);
        truncate(f);
        seek(f1,filesize(f)-1);
        truncate(f1);
        seek(f2,filesize(f2)-1);
        truncate(f2);
end;

begin
        assign(fText1,'../pascal-sources/A.txt');
        assign(fText2,'../pascal-sources/B.txt');

        assign(f1,'../pascal-sources/A_DAT.dat');
        assign(f2,'../pascal-sources/B_DAT.dat');
        assign(f,'../pascal-sources/mergingAB.dat');

        reset(fText1);
        reset(fText2);

        rewrite(f1);
        rewrite(f2);
        rewrite(f);

        initDatFile(fText1,f1);
        initDatFile(fText2,f2);

        seek(f1,0);
        seek(f2,0);

        writeln('Проверю, записались ли данные в .dat файлы.');
        writeln('A:');
        showDatFileInfo(f1);
        writeln('B:');
        showDatFileInfo(f2);

        mergingLists(f1,f2,f);

        writeln('Проверю результат сортировки: ');
        showDatFileInfo(f);

        close(fText1);
        close(fText2);
        close(f1);
        close(f2);
        close(f);
        readln;
end.