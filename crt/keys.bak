program pr_key;
uses crt;
var
        ch : char;
begin
        clrscr;
        repeat
                ch := readkey;
                if ch = #0 then begin
                        ch := readkey;
                end
                else begin
                        write ('char: ');                                      {алфавитно-цифровая}
                        if ch >= #32 then
                                write(ch, '. ')
                        else write('^', chr(ord(ch) + 64));                    {управляющий символ}
                end;
      writeln ('Ascii: ', ord(ch));
        until ch = #27;                                                        {выход по esc}
end.
